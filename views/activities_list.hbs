<div class="container-fluid">
    <div class="row">
        <h2>Liste des activités</h2>
    </div>
    <div class="row">
        {{#each activities}}
        <div class="col-sm-10 col-md-6 col-lg-4">

            <div class="card border-success mt-3">
                <small>
                    <div class="rounded-pill badge text-bg-warning float-end">
                        <i class="bi bi-geo-alt"></i>
                        <span>{{activity_address}}</span>
                    </div>
                </small>
                <div class="card-body border-success">
                    <h5 class="card-title"><i class="bi bi-dice-2"></i> {{name}} <i class="bi bi-dice-2"></i>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><i class="bi bi-calendar-date"></i> le
                        {{activity_date}} <br> à {{activity_time}}</h6>
                    <p class="card-text text-truncate">{{description}}</p>
                    <p class="card-text">{{nbr_participants}}</p>
                    <a href="{{#if @root.prenom}}/activities/read/{{id}}{{else}}/user/login{{/if}}" class="card-link btn rounded-pill btn-success m-1">Voir l'évènement</a>

                    {{#if @root.isOrganiser}} 

                    <a href="/activities/update/{{id}}" class="btn rounded-pill btn-warning m-1">Modifier l'activitét</a>
                    <button type="button" class="btn rounded-pill btn-danger m-1" data-bs-toggle="modal"
                        data-bs-target="#Modal{{id}}"> Supprimer l'activité</button>

                    {{/if}}

                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="Modal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5 text-center" id="exampleModalLabel">Supprimer évènement</h1>
                    </div>
                    <div class="modal-body">
                        Êtes vous sûr de vouloir supprimer l'évènement :<em> {{name}}</em></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <form action="/activities/delete/{{id}}" method="post">
                            <button type="submit" class="btn btn-danger">Supprimer définitivement</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>