<h1 class="text-center">Créer un évènement</h1>

<div class="container mt-5">
    <form action="/event/create" method="POST" onsubmit="return eventCheck()">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="eventName" class="mb-2 fs-4">Nom de l'évènement</label>
                    <input type="text" id="eventName" name="eventName" class="form-control border-warning-subtle"
                        aria-label="Nom de l'événement" aria-required="true">
                </div>
            </div>

        </div>
        <div class="form-group col-4 mt-4">
                <label for="imgEvent" class="mb-2 fs-4"><i class="bi bi-image-fill"></i> Url de l'image</label>
                <input type="text" id="imgEvent" name="imgEvent" class="form-control border-warning-subtle">
            </div>
        <div class="form-group mt-4">
            <label for="eventDescription" class="mb-2 fs-4">Description de l'évènement</label>
            <textarea id="eventDescription" name="eventDescription" class="form-control border-warning-subtle" rows="4"
                aria-label="Description de l'évènement" aria-required="true"></textarea>
        </div>
        <div class="row">
            <div class="form-group col-6 mt-5">
                <label for="eventDate" class="mb-2 fs-4"> <i class="bi bi-calendar m-2"></i>Date de l'évènement</label>
                <input type="date" id="eventDate" name="eventDate" class="form-control border-warning-subtle"
                    aria-label="Date de l'événement" aria-required="true">
            </div>
            <div class="form-group col-6 mt-5">
                <label for="eventTime" class="mb-2 fs-4"> <i class="bi bi-watch"></i>Heure de l'évènement</label>
                <input type="time" id="eventTime" name="eventTime" class="form-control border-warning-subtle"
                    placeholder="Par exemple 16:00" aria-label="Heure de l'événement" aria-required="true">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-4 mt-4">
                <label for="eventAddress" class="mb-2 fs-4"><i class="bi bi-geo-alt m-2"></i>Lieu de l'évènement</label>
                <input type="text" id="eventAddress" name="eventAddress" class="form-control border-warning-subtle"
                    aria-label="Lieu de l'événement" aria-required="true">
            </div>
            <div class="form-group col-3 mx-auto mt-4">
                <label for="eventParticipantsNbr" class="mb-2 fs-4"><i class="bi bi-person-fill-add m-2"></i></i>Nombre de
                    participants</label>
                <input type="number" id="eventParticipantsNbr" name="eventParticipantsNbr" class="form-control border-warning-subtle"
                    aria-label="Nombre de joueurs" aria-required="true">
            </div>
        </div>
        {{#if errors}}
        <div class="mb-3">
            {{#each errors}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{msg}} <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/each}}
        </div>
        {{/if}}
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{error}}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}


        <button type="submit" class="btn btn-warning mt-5 mb-2">Créer l'évènement</button>
    </form>
</div>
<script src="/js/eventCheck.js" defer></script>